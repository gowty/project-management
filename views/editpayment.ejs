<body>
        
<div class="container"> 
     <legend>  <h1 style="text-align:center;" >Edit Payments </h1></legend>
       
       
       <div style="width:30%;margin:25px auto;">
           <form action="/editpayment/<%=sending._id%>?_method=PUT" method="post">
               
               
                 <div class="form-group">
                       <label>Total Payments</label>
                <input class="form-control" type="text" name="edit[totalpayment]"  value="<%=sending.totalpayment%>" required>
               </div>
               
               <div class="form-group">
                     <label>Advance</label>
                <input class="form-control" type="text" name="edit[advance]"  value="<%=sending.advance%>" required>
               </div>
            
               <div class="form-group">
                     <label>Balance</label>
                  <input class="form-control" type="text" name="edit[balance]"  value="<%=sending.balance%>" required>
                </div>
                 <button class="btn btn-lg btn-primary btn-block">submit</button>  
               
            </form>
                  
        <a href="/payments" class="btn btn-danger" role="button">Go Back</a>
       </div>
       
   
</div>
  
